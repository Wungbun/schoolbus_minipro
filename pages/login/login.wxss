.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.form-container {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 10rpx;
  width: 80%;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.form-item input {
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.action-button {
  background-color: #007AFF;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.switch-text {
  text-align: center;
}

.switch-text text {
  color: #007AFF;
  font-size: 28rpx;
}