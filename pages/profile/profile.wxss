.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.login-prompt {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.login-button {
  background-color: #007AFF;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
}

.profile-info {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  margin-bottom: 20rpx;
}

.info-item text {
  font-size: 28rpx;
}

.logout-button {
  background-color: #FF3B30;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-top: 40rpx;
}