.container {
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.announcements {
  margin-bottom: 40rpx;
}

.announcement-list {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 10rpx;
}

.announcement-item {
  padding: 10rpx 0;
  border-bottom: 1rpx solid #ddd;
}

.search-section {
  margin-bottom: 40rpx;
}

.picker-section {
  margin-bottom: 20rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.picker-item text {
  width: 120rpx;
  font-size: 28rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
}

.search-button {
  background-color: #007AFF;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.schedules-section {
  margin-bottom: 40rpx;
}

.schedule-list {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 10rpx;
}

.schedule-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ddd;
}

.schedule-item text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.no-data {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 20rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 10rpx;
  width: 80%;
  max-height: 80%;
  overflow: auto;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.modal-body {
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.modal-content button {
  background-color: #007AFF;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.seat-modal {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  width: 80%;
  max-height: 80%;
  overflow: auto;
}

.seat-grid {
  margin-bottom: 20rpx;
}

.seat-row {
  display: flex;
  justify-content: center;
  margin-bottom: 10rpx;
}

.seat {
  width: 60rpx;
  height: 60rpx;
  margin: 5rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  background-color: #f0f0f0;
  position: relative;
}

.seat.available {
  background-color: #e0e0e0 !important;
}

.seat.occupied {
  background-color: #ff9090 !important;
  border: 2rpx solid rgb(255, 104, 104) !important;
}

.seat.selected {
  background-color: #aeffae !important;
  border: 2rpx solid rgb(78, 255, 131) !important;
}

.seat-info {
  margin: 20rpx 0;
  text-align: center;
}

.seat-info text {
  margin: 0 20rpx;
}

.debug-info {
  position: absolute;
  font-size: 12rpx;
  color: red;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 2rpx;
}